    "typescript": "^4.2.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
